# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Database Configuration (Legacy - keeping for Prisma if needed)
DATABASE_URL="postgresql://username:password@localhost:5432/pdr_db"

# JWT Configuration (Legacy - may be replaced by Supabase)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Configuration (Optional)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="PDR System <noreply@example.com>"

# Monitoring and Analytics (Optional)
SENTRY_DSN="https://your-sentry-dsn"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# File Upload Configuration (Optional)
UPLOAD_MAX_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,doc,docx"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15" # minutes

# Security
BCRYPT_ROUNDS="12"
CORS_ORIGIN="http://localhost:3000"

# Development Only
ENABLE_LOGGING="true"
LOG_LEVEL="debug"
